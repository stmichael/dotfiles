[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = code --wait
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset%C(green)%d%Creset %s %C(red)[%an]%Creset %C(cyan)[%cr]%Creset
[rerere]
  enabled = 1
[push]
	default = tracking
[branch]
	autosetuprebase = always
[mergetool]
  prompt = false
[merge]
  tool = ediff

[include]
  path = .gitconfig-private
[includeIf "gitdir:projects/spoud/"]
	path = .gitconfig-spoud
[includeIf "gitdir:projects/finnova/"]
	path = .gitconfig-finnova
[init]
	defaultBranch = main
