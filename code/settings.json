{
    "git.openRepositoryInParentFolders": "never",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "explorer.confirmDragAndDrop": false,
    "editor.tabSize": 2,
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.preferredDarkColorTheme": "Houston",
    "workbench.preferredLightColorTheme": "Vitesse Light",
    "redhat.telemetry.enabled": false,
    "editor.wordWrap": "on",
    "window.enableMenuBarMnemonics": false,
    "workbench.editor.dragToOpenWindow": false,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.iconTheme": "catppuccin-mocha",
    "hediet.vscode-drawio.resizeImages": null,
    "editor.fontFamily": "'Symbols Nerd Font Mono','Droid Sans Mono', 'monospace', monospace",
    "cSpell.language": "en,de-de",
    "cSpell.userWords": [
        "avro",
        "debezium",
        "ebus",
        "finnova",
        "jaas",
        "logminer",
        "openapi",
        "sasl",
        "spoud"
    ],
    "gradle.debug": true,
    "database-client.autoSync": true,
    "workbench.startupEditor": "none",
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path-linux": "/home/stmichael/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "typescript.updateImportsOnFileMove.enabled": "always"
}
